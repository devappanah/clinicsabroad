<div id='map-canvas'></div>
<%= form_for [@shop, @location] do |f| %>
<div class='form-group'>
  <div><%= f.label :lat %></div>
  <div><%= f.text_field :lat, class: 'form-control' %></div>
  <div><%= f.label :lng %></div>
  <div><%= f.text_field :lng, class: 'form-control' %></div>
  <div><%= f.label :address %></div>
  <div><%= f.text_area :address, class: 'form-control' %></div>
  <div><%= f.label :tel %></div>
  <div><%= f.text_field :tel, class: 'form-control' %></div>
  <div><%= f.label :url %></div>
  <div><%= f.text_field :url, class: 'form-control' %></div>
</div>
<div class='form-group'>
  <%= f.submit "Save Location", class: 'btn btn-success' %>
</div>
<% end %>