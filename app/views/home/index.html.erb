<div class='jumbotron' style='background: transparent url(<%= asset_url('home_background.jpg') %>) no-repeat'>
  <div class='container'>
    <div class='row' id='search_bar'>

      <div class'col-md-6'>
        <h3>Find the right clinic or hospital abroad - Dental, Cosmetic, General Checkups</h3>
        <h4>Quality care | Low cost | No delays</h4>
        <%= render 'application/search' %>
      </div>

    </div>
  </div>
</div>

<div class='container'>

  <div class='row'>
    <div class='col-md-3'>
        <h4>Submit your clinic</h4>
        <p>Are you a top dentist or specialist? Get listed on ClinicsAbroad.com now</p>
        <%= link_to new_clinic_request_path do %>
          <button type="button" class="btn btn-success">Submit now</button>
        <% end %>
    </div>

    <div class='col-md-3'>
      <h4>Popular Specialties</h4>
      <ul>
        <% Category.all.each do |category| %>
          <li><%= link_to category.name, shops_path + "?category_id=#{category.id}" %></li>
        <% end %>
      </ul>
    </div>

    <div class='col-md-3'>
      <h4>Popular Procedures</h4>
      <ul>
        <% Service.distinct_by_name.each do |service| %>
          <li><%= link_to service, shops_path + "?service=#{service}" %></li>
        <% end %>
      </ul>
    </div>

    <div class='col-md-3'>
      <h4>Popular Locations</h4>
      <ul>
        <% Location.distinct_cities.each do |location| %>
          <li><%= link_to location, shops_path + "?city=#{location}"  %></li>
        <% end %>
      </ul>    
    </div>

  </div>

</div>



