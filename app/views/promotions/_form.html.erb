<%= form_for [@shop, @promotion] do |f| %>
<div class='form-group'>
  <div><%= f.label :title %></div>
  <div><%= f.text_field :title, class: 'form-control' %></div>
  <div><%= f.label :description %></div>
  <div><%= f.text_area :description, class: 'form-control' %></div>
  <div><%= f.label :exp_date %></div>
  <div><%= f.datetime_field :exp_date, class: 'form-control' %></div>
  <div><%= f.label :avatar %></div>
  <div><%= f.file_field :avatar %></div>
</div>
<div class='form-group'>
  <%= f.submit "Save Promotion", class: 'btn btn-success' %>
</div>
<% end %>