<!DOCTYPE html>
<html>
<head>
  <title>ClinicsAbroad</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <%= render 'navigation' %>
    <%= render 'flash' %>
    <div class='row'>
      <div class='col-md-8'>
        <%= yield %>
      </div>
      <div class='col-md-4'>
        <ul class="nav nav-pills nav-stacked">
          <li>
            <%= link_to "Clinic Details", edit_shop_path(@shop) %>
          </li>
          <li>
            <%= link_to "Location Details", shop_locations_path(@shop) %>
          </li>
          <li>
            <%= link_to "Procedure Details", shop_services_path(@shop) %>
          </li>
          <li>
            <%= link_to "Staff Details", shop_staffs_path(@shop) %>
          </li>
          <li>
            <%= link_to "Promotion Details", shop_promotions_path(@shop) %>
          </li>
          <li>
            <%= link_to "Clinic Photo Details", shop_photos_path(@shop) %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>