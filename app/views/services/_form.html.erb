<%= form_for [@shop, @service] do |f| %>
<div class='form-group'>
  <div><%= f.label :name %></div>
  <div><%= f.text_field :name, class: 'form-control' %></div>
  <div><%= f.label :description %></div>
  <div><%= f.text_area :description, class: 'form-control' %></div>
  <div><%= f.label :price %></div>
  <div><%= f.number_field :price, class: 'form-control' %></div>
  <div><%= f.label :duration %></div>
  <div><%= f.text_field :duration, class: 'form-control' %></div>
</div>
<div class='form-group'>
  <%= f.submit "Save Service", class: 'btn btn-success' %>
</div>
<% end %>