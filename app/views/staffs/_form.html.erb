<%= form_for [@shop, @staff], html: { multipart: true } do |f| %>
<div class='form-group'>
  <div><%= f.label :name %></div>
  <div><%= f.text_field :name, class: 'form-control' %></div>
  <div><%= f.label :education %></div>
  <div><%= f.text_area :education, class: 'form-control' %></div>
  <div><%= f.label :skills %></div>
  <div><%= f.text_area :skills, class: 'form-control' %></div>
  <div><%= f.label :avatar %></div>
  <div><%= f.file_field :avatar %></div>
</div>
<div class='form-group'>
  <%= f.submit "Save Staff", class: 'btn btn-success' %>
</div>
<% end %>